<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과 -->
    <item android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#B3B3B3"/> <!-- 그림자 색상 -->
            <corners android:radius="8dp"/> <!-- 모서리 반경 -->
        </shape>
    </item>

    <!-- 메인 배경 및 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- 배경 색상 -->
            <corners android:radius="8dp"/> <!-- 모서리 반경 -->
            <stroke
                android:width="2dp"
                android:color="#D3D3D3"/> <!-- 테두리 색상 및 두께 -->
        </shape>
    </item>
</layer-list>